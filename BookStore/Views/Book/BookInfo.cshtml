@model Book

@{
    ViewData["Title"] = "Информация о книге";
}

<h1 class="text-center">Информация о книге</h1>

<div class="w-100 d-flex justify-content-center">
    <div class="card w-75 mt-4">
        <div class="card-body">
            <div class="w-100 d-flex">
                <div class="w-50" style="font-size: 20px">
                    <h3 class="card-title">Название книги</h3>
                    <p class="card-text">@Model.Title</p>
                    <h3 class="card-title">Описание книги</h3>
                    <p class="card-text">@Model.Description</p>
                    <h3 class="card-title">Количество страниц</h3>
                    <p class="card-text">@Model.PageCount</p>
                    <h3 class="card-title">Цена книги</h3>
                    <p class="card-text">@Model.Price руб.</p>
                    <h3 class="card-title">Автор</h3>
                    <p class="card-text">@Model.Author.Name</p>
                </div>
                <div class="w-50 border-2 border">
                    <img src="/book.jpg" class="card-img-top" alt="...">
                </div>
            </div>
            <div class="text-center w-100 mt-4">
                <a class="btn btn-primary  w-100 mb-2" style="font-size: 20px" asp-action="BookUpsert" asp-route-id="@Model.Id">Изменить</a>
                
                <form asp-action="DeleteBook" method="post" asp-route-id="@Model.Id">
                    <button type="submit" style="font-size: 20px" class="btn btn-danger w-100 mb-2">Удалить</button>
                </form>

                
            </div>
        </div>
    </div>
</div>